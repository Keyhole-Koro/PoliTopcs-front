{
  "compilerOptions": {
    "target": "es6",  // Update target for better modern JS support
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",  // Optional: Ensures consistent path resolution
    "paths": {         // Optional: For aliasing paths (e.g., "@/components")
      "@interfaces/*": ["interfaces/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@contexts/*": ["contexts/*"],
      "@hooks/*": ["hooks/*"],
    }
  },
  "include": [
    "src",
    "config-overrides.js"
  ]
}
